<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bbt.dao.UserDao">

    <resultMap id="user" type="com.bbt.model.User">
        <id property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
    </resultMap>


    <select id="selectUserCountByUserName">
        SELECT count(*) FROM `user` WHERE user_name=#{userName}
    </select>

    <insert id="addUser" parameterType="com.bbt.model.User">
        INSERT `user`(user_name,password) VALUE (#{userName},#{password})
    </insert>

</mapper>